<%= form_for @species do |f| %>
	<div class="row">
		<div class="form-group col-sm-3">
			<%= f.label :name %>
			<%= f.text_field :name, class: "form-control" %>
		</div>
		<div class="form-group col-sm-3">
			<%= f.label :description %>
			<%= f.text_field :description, class: "form-control" %>
		</div>
		<div class="form-group col-sm-3">
			<%= f.label :source_page %>
			<%= f.text_field :source_page, class: "form-control" %>
		</div>
		<div class="form-group col-sm-3">
			<%= f.label :source_book %>
			<%= f.text_field :source_book, class: "form-control" %>
		</div>
	</div>
	<div class="row">
		<div class="form-group col-sm-3">
			<%= f.label :brawn %>
			<%= f.text_field :brawn, class: "form-control" %>
		</div>
		<div class="form-group col-sm-3">
			<%= f.label :agility %>
			<%= f.text_field :agility, class: "form-control" %>
		</div>
		<div class="form-group col-sm-3">
			<%= f.label :intellect %>
			<%= f.text_field :intellect, class: "form-control" %>
		</div>
		<div class="form-group col-sm-3">
			<%= f.label :cunning %>
			<%= f.text_field :cunning, class: "form-control" %>
		</div>
	</div>
	<div class="row">
		<div class="form-group col-sm-3">
			<%= f.label :willpower %>
			<%= f.text_field :willpower, class: "form-control" %>
		</div>
		<div class="form-group col-sm-3">
			<%= f.label :presence %>
			<%= f.text_field :presence, class: "form-control" %>
		</div>
		<div class="form-group col-sm-3">
			<%= f.label :wound_threshold %>
			<%= f.text_field :wound_threshold, class: "form-control" %>
		</div>
		<div class="form-group col-sm-3">
			<%= f.label :strain_threshold %>
			<%= f.text_field :strain_threshold, class: "form-control" %>
		</div>
	</div>
	<div class="row">
		<div class="form-group col-sm-3">
			<%= f.label :experience %>
			<%= f.text_field :experience, class: "form-control" %>
		</div>
		<div class="form-group col-sm-3">
			<%= f.label :skill_name %>
			<%= f.text_field :skill_name, class: "form-control" %>
		</div>
		<div class="form-group col-sm-3">
			<%= f.label :skill_start_rank %>
			<%= f.text_field :skill_start_rank, class: "form-control" %>
		</div>
		<div class="form-group col-sm-3">
			<%= f.label :skill_limit_rank %>
			<%= f.text_field :skill_limit_rank, class: "form-control" %>
		</div>
	</div>
		<%= f.submit class: "btn access_button" %>
<% end %>
