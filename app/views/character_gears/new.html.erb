<div class="mt-3">
  <h1>Add new Gear
    <%= link_to 'Cancel', @character, class: 'btn btn-danger' %></h1>
</div>

<div class="row characters-row">
  <% @gears.each do |gear| %>
  <div class="col-sm-4 characters-col">
    <div class="card">
      <div class="card-block">
        <h4 class="card-title text-center"><%= gear.name %></h4>
        <ul class="card-text">
          <li>Type:
            <%= gear.gear_type %></li>
          <li>Price:
            <strong><%= gear.price %></strong>
          </li>
          <li>Rarity:
            <strong><%= gear.rarity %></strong>
          </li>
          <li>Encum:
            <strong><%= gear.encum %></strong>
          </li>
        </ul>
        <div class="text-center">
          <%= button_to "Add Gear", {action: "create", gear_id: gear.id, character_id: @character.id}, remote: true, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
