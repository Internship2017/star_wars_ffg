<div class="row characters-row">
  <% @character_gears.each do |character_gear| %>
  <div class="col-sm-4 characters-col">
    <div class="card">
      <div class="card-block">
        <h4 class="card-title"><%= character_gear.gear.name %></h4>
        <ul class="card-text">
          <li>Price: <%= character_gear.gear.price %></li>
          <li>Rarity: <%= character_gear.gear.rarity %></li>
          <li>Type: <%= character_gear.gear.gear_type %></li>
        </ul>
        <%= link_to "Show", character_character_gear_path(@character, character_gear), class: "btn access_button" %>
        <%= link_to 'Delete', character_character_gear_path(@character, character_gear), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
<%= link_to 'New Gear', new_character_character_gear_path(@character), class: 'btn btn-primary' %>