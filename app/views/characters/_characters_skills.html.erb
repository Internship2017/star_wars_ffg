<div class="container">
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
			<table class="table table-striped skills-table">
				<tr>
					<th>General Skills</th>
					<th>Rank</th>
				</tr>
				<% @character.skills.order(:name).select{ |type_skill| type_skill.type_of_skill == "General" }.each do |skill|  %>
				<tr>
					<td><%= skill.name %></td>
					<td><%= skill.rank %></td>
					
				</tr>
				<% end %>
			</table>
		</div>


		<div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
			<table class="table table-striped c-skills-table">
				<tr>
					<th>Combat Skills</th>
					<th>Rank</th>
				</tr>
				<% @character.skills.order(:name).select{ |type_skill| type_skill.type_of_skill == "Combat" }.each do |skill|  %>
				<tr>
					<td><%= skill.name %></td>
					<td><%= skill.rank %></td>
					
				</tr>
				<% end %>
			</table>
		</div>



		<div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
			<table class="table table-striped k-skills-table">
				<tr>
					<th>Knowledge Skills</th>
					<th>Rank</th>
				</tr>
				<% @character.skills.order(:name).select{ |type_skill| type_skill.type_of_skill == "Knowledge" }.each do |skill|  %>
				<tr>
					<td><%= skill.name %></td>
					<td><%= skill.rank %></td>
					
				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>
	
