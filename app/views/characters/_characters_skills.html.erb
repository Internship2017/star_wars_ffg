					<td>
						<%=fa_icon "plus-circle"%>
						<%=fa_icon "minus-circle"%>
					</td>
					
				</tr>
				<% end %>
			</table>
		</div>

		<div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
