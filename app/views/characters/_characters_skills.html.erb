<div class="container">
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
			<table class="table table-striped skills-table">
				<tr>
					<th>General Skills</th>
					<th>Rank</th>
					<th></th>
				</tr>
				<% select_skill_type(@character, "General").each do |skill|  %>
				<tr>
					<td><%= link_to skill.name, skill_path(skill) %></td>
					<td><%= skill.rank %></td>
					<td>
						<%=fa_icon "plus-circle"%>
						<%=fa_icon "minus-circle"%>
					</td>
				</tr>
				<% end %>
			</table>
		</div>


		<div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
