<div class="characters-header">
	<h1><%= image_tag "http://vignette3.wikia.nocookie.net/starwars/images/5/52/Force_and_Destiny_logo.png/revision/latest?cb=20151102133120" %><span class="space_between_image">CHARACTERS</span></h1>
</div>

<div class="row characters-row">
	<% @characters.each do |character| %>
		<div class="col-sm-4 characters-col">
			<div class="card">
			  <div class="card-block">
			    <h4 class="card-title"><%= character.name %></h4>
			    <h6><%= character.user.name %></h6>
			    <ul class="card-text">
			    	<li>Species: <%= character.species %></li>
					<li>Gender: <%= character.gender %></li>
					<li>Age: <%= character.age %></li>
			    </ul>
			    <%= link_to "Show", character, class: "btn access_button" %>
			    <%= link_to "Edit", edit_character_path(character), class: "btn btn-primary" %>
			    <%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
			  </div>
			</div>
		</div>
	<% end %>
</div>