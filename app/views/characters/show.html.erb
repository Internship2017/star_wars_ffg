<div class="container mt-5 mb-5">
  <ul class="nav nav-pills" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" data-toggle="pill" href="#character-summary">Character summary</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-toggle="pill" href="#character_skills">Skills</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-toggle="pill" href="#weapons">Weapons</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-toggle="pill" href="#gear">Gear</a>
    </li>
  </ul>

<div class="tab-content">
	<div class="tab-pane mt-20" id="character_skills" role="tabpanel">
		<div class="characters-header">
			<h1>SKILLS</h1>
		</div>
		<div class="xp">
				<h6>Total XP = <span id="total_xp"><%= @character.total_xp %></span></h6>   
				<h6>Available XP = <span id="available_xp"><%= @character.available_xp %></span></h6>
		</div>
        <div class="row">
        	<%= render "characters_skills" %>
        </div>
	</div>
    <div class="tab-pane active mt-20" id="character-summary" role="tabpanel">
      <%= render 'character_summary' %>
    </div>
    <div class="tab-pane mt-20" id="weapons" role="tabpanel">
      <%= render 'character_weapons' %>
    </div>
    <div class="tab-pane mt-20" id="gear" role="tabpanel">
      <%= render 'character_gear' %>
    </div>
  </div>
</div>
