<div class="mt-3">
  <h1>Add new Weapon
    <%= link_to 'Cancel', @character, class: 'btn btn-danger' %></h1>
</div>

<div class="row characters-row">
  <% @weapons.each do |weapon| %>
  <div class="col-sm-4 characters-col">
    <div class="card">
      <div class="card-block">
        <h4 class="card-title text-center"><%= weapon.name %></h4>
        <ul class="card-text">
          <li>Type:
            <%= weapon.weapon_type %></li>
          <li>Damage:
            <%= weapon.default_damage %></li>
          <li>Crit:
            <%= weapon.default_crit %></li>
          <li>Price:
            <strong><%= weapon.price %></strong>
          </li>
          <li>Rarity:
            <strong><%= weapon.rarity %></strong>
          </li>
        </ul>
        <div class="text-center">
          <%= button_to "Add Weapon", {action: "create", weapon_id: weapon.id, character_id: @character.id}, remote: true, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
